<h1><%=@question.title%></h1>
<h2><%=@question.body%></h2>

<%= erb :'_errors' %>

<form action="/questions/<%=@question.id%>/comments/<%=@answer.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <label>Comment: </label><input type="text" name="comment[body]" value="<%=@comment.body%>">
  <input type="hidden" name="comment[user_id]" value="<%=current_user.id%>">
  <input type="submit" value="Submit">
</form>
